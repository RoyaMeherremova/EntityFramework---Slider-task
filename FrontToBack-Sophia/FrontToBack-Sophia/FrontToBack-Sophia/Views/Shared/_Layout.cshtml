    <link rel="stylesheet" href="~/assets/scss/contact.css">
    <link rel="stylesheet" href="~/assets/scss/productDetail.css">
    <link rel="stylesheet" href="~/assets/scss/wishlist.css">
    <title>@ViewData["Title"] - FrontToBack_Sophia</title>
</head>

<body>

    <div id="overlay">
    </div>
    <header>
        <section id="nav-up">
            <div class="container">
                <div class="up">

                    <i class="fa-solid fa-bars hamburger-menu d-lg-none"></i>
                    <div class="sidebar d-lg-none hide-sidebar ">
                        <i class="fa-solid fa-xmark x-icon"></i>
                        <hr>
                        <div class="sidebar-list ">
                            <a asp-controller="Home" asp-action="Index">
                                <p>Home</p>
                            </a>
                            <a asp-controller="Contact" asp-action="Index">
                                <p>Contact</p>
                            </a>
                            <a asp-controller="About" asp-action="Index">
                                <p>About</p>
                            </a>
                            <a asp-controller="Blog" asp-action="Index">
                                <p>Blog</p>
                            </a>

                            <div class="sidebar-pages">
                                <a href="">Pages</a>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <div class="sidebar-pages-list d-none">
                                <a asp-controller="Home" asp-action="Index">
                                    <p>Home</p>
                                </a>
                                <a asp-controller="Contact" asp-action="Index">
                                    <p>Contact</p>
                                </a>
                                <a asp-controller="About" asp-action="Index">
                                    <p>About</p>
                                </a>
                                <a asp-controller="Blog" asp-action="Index">
                                    <p>Blog</p>
                                </a>
                                <a asp-controller="Basket" asp-action="Index">
                                    <p>Basket</p>
                                </a>
                                <a asp-controller="Wislist" asp-action="Index">
                                    <p>Wishlist</p>
                                </a>
                                <a asp-controller="Wislist" asp-action="Index">
                                    <p>Cart</p>
                                </a>

                                <a asp-controller="Checkout" asp-action="Index">
                                    <p>Checkout</p>
                                </a>
                            </div>
                        </div>

                    </div>
                    <div class="left">
                        <div class="currency">
                            <span>USD</span>
                            <i class="fa-solid fa-sort-down"></i>
                        </div>
                        <div class="valyuta d-none">
                            <button class="usd-btn">
                                <p>USD</p>
                            </button>
                            <button class="eur-btn">
                                <p>EUR</p>
                            </button>
                        </div>
                        <div class="language">
                            <a href="">
                                <img src="~/assets/img/gb.svg" alt=""><span>English</span><i class="fa-solid fa-sort-down"></i>
                            </a>

                        </div>
                        <div class="language-area d-none">
                            <button>
                                <img class="englis-flag" src="~/assets/img/gb.svg"
                                     alt=""><span>English</span>
                            </button>
                            <button><img src="~/assets/img/germany.svg" alt=""><span>German</span></button>
                            <button><img src="~/assets/img/french.svg" alt=""><span>French</span></button>
                            <button><img src="~/assets/img/russian.svg" alt=""><span>Russian</span></button>
                            <button><img src="~/assets/img/turkis.svg" alt=""><span>Turkish</span></button>
                        </div>
                    </div>

                    <div class="right">
                        <div class="wishlist">
                            <a asp-controller="Wislist" asp-action="Index"><i class="fa-regular fa-heart"></i></a>
                            <a asp-controller="Wislist" asp-action="Index">WISHLIST</a>
                        </div>

                        <div class="compare">
                            <a href=""><i class="fa-solid fa-code-compare"></i></a>
                            <a href="">COMPARE</a>
                        </div>

                        <div class="my-account">
                            <a asp-controller="Account" asp-action="Index"><i class="fa-solid fa-user"></i></a>
                            <a asp-controller="Account" asp-action="Index">My Account</a>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <section id="nav-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-12 col-sm-12 logo ">
                        <div class="img-log">
                            <img src="~/assets/img/logo-white.png" alt="">

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="input-area">
                            <input type="text" placeholder="Type to search..">
                            <button class="btn-search">SEARCH</button>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="cal-bucket">

                            <div class="div-icon">
                                <i class="fa-solid fa-phone"></i>
                            </div>
                            <div class="div-phone">
                                <p>Helpline:</p>
                                <span>02(981)336 111</span>
                            </div>
                            <div class="cart">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span class="count">0</span>
                                <span class="basket-subtotal">$0.00</span>
                            </div>


                        </div>

                    </div>

                    <div class="chek-card-box d-none">
                        <div class="check-card">
                            <a asp-controller="Basket" asp-action="Index">
                                <p>CHECK CARD</p>
                            </a>

                            <p class="count">0 ITEM</p>
                        </div>
                        <div class="border"></div>

                        <div class="chek-card-item d-none">
                        </div>
                        <div class="border chek-border"></div>
                        <div class="subtotal d-none ">
                            <p>Subtotal:</p>
                            <span></span>
                        </div>
                        <p class="alert">Please add product</p>
                    </div>

                </div>


            </div>

        </section>





        <section id="nav-down" class="d-lg-block d-none">
            <div class="container">
                <div class="down">
                    <div class="home item">
                        <a asp-controller="Home" asp-action="Index">HOME</a>
                    </div>
                    <div class="contact item">
                        <a asp-controller="Contact" asp-action="Index">CONTACT</a>
                    </div>
                    <div class="about item">
                        <a asp-controller="About" asp-action="Index">ABOUT</a>
                    </div>
                    <div class="pages item">
                        <a href="">PAGES</a>
                        <i class="fa-solid fa-sort-down"></i>
                    </div>
                    <div class="pages-list d-none">
                        <a asp-controller="Home" asp-action="Index">
                            <p>Home</p>
                        </a>
                        <a asp-controller="Contact" asp-action="Index">
                            <p>Contact</p>
                        </a>
                        <a asp-controller="About" asp-action="Index">
                            <p>About</p>
                        </a>
                        <a asp-controller="Blog" asp-action="Index">
                            <p>Blog</p>
                        </a>
                        <a asp-controller="Basket" asp-action="Index">
                            <p>Basket</p>
                        </a>
                        <a asp-controller="Wishlist" asp-action="Index">
                            <p>Wishlist</p>
                        </a>
                        <a asp-controller="Wishlist" asp-action="Index">
                            <p>Cart</p>
                        </a>
                        <a asp-controller="ProductDetail" asp-action="Index">
                            <p>PoductDetail</p>
                        </a>
                        <a asp-controller="Checkout" asp-action="Index">
                            <p>Checkout</p>
                        </a>
                    </div>
                    <div class="blog item">
                        <a asp-controller="Blog" asp-action="Index">BLOG</a>
                    </div>
                </div>
            </div>
        </section>




    </header>
         
            @RenderBody()
