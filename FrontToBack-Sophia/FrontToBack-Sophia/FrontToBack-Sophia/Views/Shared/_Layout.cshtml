    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/slick-1.8.1/slick/slick-theme.css">
    <link rel="stylesheet" href="~/assets/slick-1.8.1/slick/slick.css">
    <link rel="stylesheet" href="~/assets/scss/home.css">
    <link rel="stylesheet" href="~/assets/scss/about.css">
    <link rel="stylesheet" href="~/assets/scss/account.css">
    <link rel="stylesheet" href="~/assets/scss/basket.css">
